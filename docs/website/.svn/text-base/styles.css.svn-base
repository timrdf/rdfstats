@CHARSET "utf-8";

body {
	background-color: lightgray;
	margin: 0px
}

#pagebox {
	background-color: white;
	margin: 15px;
	padding: 15px;
	border: #1d6e00 1px solid;
}

p,li,td,th {
	font-family: Verdana,Arial,Sans;
	font-size: 0.8em;
	color: black;
	line-height: 1.4 em;
}

code,pre,.code {
	font-family: courier;
	color: #333333;
	white-space: pre;
}

pre,.code {
	font-size: 0.8em;
	background-color: #ffffd0;
	padding: 5px;
	border: 1px solid #cccca0;
	margin-top: 15px;
	margin-bottom: 15px;
}
	
blockquote {
	font-style: italic;
	font-family: Georgia, Times, Serif
}

img {
	border: 0px
}

.green {
	color: #1d6e00
}

h1 {
	font-family: Verdana, Arial, Sans-serif;
	font-size: 1.3em;
	font-weight: bold;
	color: #1d6e00;
}

.footertext {
	margin-bottom: 0px;
	margin-top: 25px;
	font-size: 0.8em;
}

h2 {
	font-family: Verdana, Arial, Sans-serif;
	font-size: 1em;
	font-weight: bold;
	color: #1d6e00;
	padding-top: 2px;
	margin-top: 30px;
	border-top: dashed #1d6e00 1px;
	width: 50%
}

h3 {
	font-family: Verdana, Arial, Sans-serif;
	font-size: 0.8em;
	font-weight: bold;
	color: #1d6e00;
	margin-top: 20px
}

li.p {
	margin-bottom: 0.6em;
}

table.results {
	border: 1px solid black; padding: 6px; border-spacing: 0; background-color: #c0c0f0
}
	
td.results, th.results {
	background-color: white; 
	border: 1px solid #c0c0f0; 
	padding: 2px;
	width: 100px;
}
